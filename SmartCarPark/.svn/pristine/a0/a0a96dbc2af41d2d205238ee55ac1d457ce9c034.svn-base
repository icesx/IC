#ifndef MYSERIAL_H_
#define MYSERIAL_H_
#include <Arduino.h>
#include <SoftwareSerial.h>
class MySerial {
private:
	SoftwareSerial *mySerial;
public:
	MySerial(SoftwareSerial* mySerial,int band) {
		this->mySerial = mySerial;
		this->mySerial->begin(band);
	}
	~MySerial() {

	}
	void runCommand(char* command);
	void runCommand(byte command[]);
	void readFromSerial(long timeout);
	void readFromSerial();
};

#endif /* MYSERIAL_H_ */
